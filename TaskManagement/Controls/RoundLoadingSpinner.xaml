<UserControl x:Class="TaskManagement.Controls.RoundLoadingSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskManagement.Controls"
             Width="100" Height="100">

    <Grid>

        <Grid.RenderTransform>
            <RotateTransform x:Name="RotateTransform" CenterX="0.5" CenterY="0.5"/>
        </Grid.RenderTransform>

        <Ellipse Width="50" Height="50" Fill="LightBlue" Stroke="Blue" StrokeThickness="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
